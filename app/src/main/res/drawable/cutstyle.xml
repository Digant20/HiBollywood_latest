<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/colorAccent" />
    <item>
        <bitmap android:src="@drawable/logo1" android:gravity="center" android:alpha="0.1"/>
    </item>
    <item
        android:bottom="-200dp"
        android:left="0dp"
        android:right="-200dp"
        android:top="200dp">
        <rotate
            android:fromDegrees="-31"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimary" />
            </shape>
        </rotate>
    </item>
</layer-list>