<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NavDrawer"
    tools:showIn="@layout/app_bar_nav_drawer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardSing"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:clickable="true"
                    app:cardBackgroundColor="#FE9A2E"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="6dp"
                    app:cardPreventCornerOverlap="true"
                    app:contentPadding="40dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"

                            android:alpha="0.5"
                            android:layout_gravity="center"
                            android:src="@drawable/singingmouth" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Singing"
                            android:textColor="#FFFFFF"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </FrameLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardDance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:clickable="true"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="6dp"
                    app:cardPreventCornerOverlap="true"
                    app:contentPadding="40dp">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/dancing"
                        android:alpha="0.5"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dancing"
                        android:textColor="#FFF"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                    </FrameLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/cardActing"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:clickable="true"
                    app:cardBackgroundColor="#000000"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="6dp"
                    app:cardPreventCornerOverlap="true"
                    app:contentPadding="40dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/acting"
                            android:alpha="0.5"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acting"
                            android:textColor="#FFF"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </FrameLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardModelling"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:alpha="0.5"
                    android:clickable="true"
                    app:cardBackgroundColor="#FE2EF7"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="6dp"
                    app:cardPreventCornerOverlap="true"
                    app:contentPadding="40dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/model"
                            android:alpha="0.5"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Modeling"
                            android:textColor="#FFF"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </FrameLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardGuitarist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:clickable="true"
                    app:cardBackgroundColor="#00FFFF"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="6dp"
                    app:cardPreventCornerOverlap="true"
                    app:contentPadding="40dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/guitar"
                            android:alpha="0.5"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Guitarist"
                            android:textColor="#FFF"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </FrameLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </HorizontalScrollView>

    </ScrollView>


</RelativeLayout>